  <% if user_signed_in? %>

    <% if @user.recommend_hotels == [] %>
      <h2>Recommendation For Hotel is Not Available.</h2>
      (Please add some favorites or All the Recommendations are added to favorites)


      <% else %>
    <table><h2>Recommended Hotels for you!!!</h2>

      <div class="row">
      <% i=0 %>
      <% @user.recommend_hotels.each do |key, value| -%>
    <% if (i < 6) %>
      <% i=i+1 %>
        <div class="col-sm-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= link_to key.name , key %></h5>
              <p class="card-text"><%= key.address %></p>
              <p class="card-text"><%= link_to "Add to favorite", {:controller => "like", :action => "index", method: :post, :hotel_id => key.id }%></p>
            </div>
            <ul class="list-group list-group-flush">

              <li class="list-group-item">Rank :<%= key.rank %></li>
              <li class="list-group-item">Recommendation Rating :<%= value.round(2) %></li>
            </ul>
            <div class="card-body">
              <!--<a href="#" class="btn btn-primary">Search</a> -->
            </div>
          </div>
        </div>
        <% end %>
      <% end -%>
      <br>
      </div>
    </table>

    <% end %>
