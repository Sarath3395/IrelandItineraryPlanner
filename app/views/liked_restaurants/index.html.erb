<p id="notice"><%= notice %></p>

<h1>Liked Restaurants</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Restaurant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @liked_restaurants.each do |liked_restaurant| %>
      <tr>
        <td><%= liked_restaurant.user_id %></td>
        <td><%= liked_restaurant.restaurant_id %></td>
        <td><%= link_to 'Show', liked_restaurant %></td>
        <td><%= link_to 'Edit', edit_liked_restaurant_path(liked_restaurant) %></td>
        <td><%= link_to 'Destroy', liked_restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Liked Restaurant', new_liked_restaurant_path %>
