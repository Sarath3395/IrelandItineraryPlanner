<% if user_signed_in? %>
<p id="notice"><%= notice %></p>

<h1>Reported Errors That are Assigned to You</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">ReportedError Id</th>
      <th scope="col">Error Message</th>
      <th scope="col" ></th>
    </tr>
  </thead>

  <tbody>
    <% @report_errors.each do |report_error| %>
      <tr>
        <th scope="row"><%= report_error.id %></th>
        <td><%= report_error.errormessage %></td>
        <td><%= link_to 'Destroy', report_error, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  <%= form_for :viewlogs, url: '/viewlogs' , class: 'form-inline', style: 'display:inline !important;' do |form| %>
    <div class="field">
      Please check below box if you want to include line number to the log file:
      <br>

      <div class="field">
        Include Line Number:
        <%= check_box_tag 'linenumber_check', 'linenumber_check' %>
      </div>

      Select view type
      <%= form.select :viewtype, [['Text','text'],['PDF','pdf']] %>
      <br>
<br>



      <%= form.submit "ViewErrorReportedLogs" ,{class: "btn btn-primary"} %>
    </div>
  <% end %>


<!--
  <td><%#= link_to 'viewlogs', '/viewlogs'  %></td>
-->

  <td><%= link_to 'Back', adminpage_path  %></td>
  <br>
<br>

  <% else %>
  <h2> No Errors assigned to you!!!  </h2>
<%end %>