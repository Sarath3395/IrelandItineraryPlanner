<p id="notice"><%= notice %></p>

<h1>Transports</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Transport Type</th>
      <th>Origin</th>
      <th>Destination</th>
      <th>Departure</th>
      <th>Arrival</th>
      <th>Price</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transports.each do |transport| %>
      <tr>
        <td><%= transport.name %></td>
        <td><%= transport.transporttype %></td>
        <td><%= transport.origin %></td>
        <td><%= transport.destination %></td>
        <td><%= transport.departure %></td>
        <td><%= transport.arrival %></td>
        <td><%= transport.price %></td>
        <td><%= transport.location_id %></td>
        <td><%= link_to 'Show', transport %></td>
        <td><%= link_to 'Edit', edit_transport_path(transport) %></td>
        <td><%= link_to 'Destroy', transport, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

