<% if @liked_hotels == [] %>
  <h2> No Favorite Hotels</h2>
  <% else %>
  <h2>Favorite Hotels List</h2>
  <div class="row">

    <% @liked_hotels.each do |likedhotel| -%>
      <% hotel = @hotels.find_by_id(likedhotel.hotel_id) %>
      <div class="col-sm-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= link_to hotel.name , hotel %></h5>
            <p class="card-text"><%= hotel.address %></p>
            <p class="card-text"><%= link_to "Remove favorite", {:controller => "like", :action => "index", method: :post, :hotel_id => hotel.id }%></p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Rank :<%= hotel.rank %></li>
          </ul>
          <div class="card-body">
            <!--<a href="#" class="btn btn-primary">Search</a> -->
          </div>
        </div>
      </div>
    <% end %>
    <br>

  </div>
<% end %>

