<% if user_signed_in? %>

  <h2>TopRated Hotels List</h2>
  <% i=0 %>
  <div class="row">
    <% @hotels.each do |key, value| -%>
      <% if (i < 6) %>
        <% i = i+1 %>
        <div class="col-sm-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= link_to key.name, key %></h5>
              <p class="card-text"><%= key.address %></p>
              <% lk = LikedHotel.where(user_id: current_user.id, hotel_id: key.id) %>
              <% if lk == []%>
                <p class="card-text"><%= link_to "Add to favorite", {:controller => "like", :action => "index", method: :post, :hotel_id => key.id }%></p>
