<h2>Hotels List</h2>

<% if user_signed_in? %>
<div class="row">
  <% @hotels.each do |hotel| -%>

      <div class="col-sm-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= link_to hotel.name, hotel %></h5>
            <p class="card-text"><%= hotel.address %></p>
            <% lk = LikedHotel.where(user_id: current_user.id, hotel_id: hotel.id) %>
            <% if lk == []%>
              <p class="card-text"><%= link_to "Add to favorite", {:controller => "like", :action => "index", method: :post, :hotel_id => hotel.id }%></p>
            <% else %>
              <p class="card-text"><%= link_to "Remove favorite", {:controller => "like", :action => "index", method: :post, :hotel_id => hotel.id }%></p>
            <% end %>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Rank :<%= hotel.rank %></li>
          </ul>
          <div class="card-body">
            <!--<a href="#" class="btn btn-primary">Search</a> -->
          </div>
        </div>
      </div>
    <% end %>
  <br>
</div>
  <% else %>
  <div class="row">
    <% @hotels.each do |hotel| -%>

      <div class="col-sm-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= link_to hotel.name, hotel %></h5>
            <p class="card-text"><%= hotel.address %></p>

          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Rank :<%= hotel.rank %></li>
          </ul>
          <div class="card-body">
            <!--<a href="#" class="btn btn-primary">Search</a> -->
          </div>
        </div>
      </div>
    <% end %>
    <br>
  </div>
<% end %>