<p id="notice"><%= notice %></p>

<h1>Hotels</h1>

<table>
  <thead>
    <tr>
      <th>Hotel ID</th>
      <th>Name</th>
      <th>Roomtype</th>

      <th>Coordinates</th>
      <th>Address</th>

      <th>Price</th>
      <th>Noofrooms</th>
      <th>Noofperson</th>
      <th>Bedtype</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hotels.each do |hotel| %>
      <tr>
        <td><%= hotel.id %></td>
        <td><%= hotel.name %></td>
        <td><%= hotel.roomtype %></td>

        <td><%= hotel.coordinates %></td>
        <td><%= hotel.address %></td>

        <td><%= hotel.price %></td>
        <td><%= hotel.noofrooms %></td>
        <td><%= hotel.noofperson %></td>
        <td><%= hotel.bedtype %></td>
        <td><%= hotel.location_id %></td>
        <td><%= link_to 'Show', hotel %></td>
        <td><%= link_to 'Edit', edit_hotel_path(hotel) %></td>
        <td><%= link_to 'Destroy', hotel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

